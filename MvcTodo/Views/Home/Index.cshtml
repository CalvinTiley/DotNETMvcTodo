@model IEnumerable<MvcTodo.Models.Task>;

@{
    ViewData["Title"] = "Home Page";
}

<header>
    <h1>Tasks</h1>

    <a asp-action="Create">Add Task</a>
</header>


<table>
    <thead>
        <th>@Html.DisplayNameFor(model => model.Title)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
        <th>Actions</th>
    </thead>

    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => task.Title)</td>
                <td>@Html.DisplayFor(modelItem => task.Description)</td>
                <td>@Html.DisplayFor(modelItem => task.CreatedDate)</td>
                <td>
                    <div>
                        <a asp-action="Delete" asp-route-id="@task.Id">Delete Task</a>
                        <a asp-action="Edit" asp-route-id="@task.Id">Edit Task</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
